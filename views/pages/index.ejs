<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../components/head') %> 
  <link rel="stylesheet" href="/public/css/home.css">
</head>
<style>
  .user{display: flex;}
</style>
<body>
  <%- include('../components/header') %> 

  <div class="body">
    Home Page
    <div>
      <h2>create new</h2>
      <input type="text" name="" id="username" placeholder="Username"> <br>
      <input type="text" name="" id="password" placeholder="Password"> <br>
      <input type="text" name="" id="age" placeholder="Age"> <br>
      <input type="text" id="class" placeholder="class">
    </div>
    <button onclick="logon()">dang ky</button>
    
    <div class="changePass">
      <h2>change Pass</h2>
      <input type="text" name="" class="username" placeholder="Username"> <br>
      <input type="text" name="" class="password" placeholder="Password"> <br>
      <input type="text" name="" class="newPass" placeholder="newPass"> <br>
      <input type="text" name="" class="confirm" placeholder="confirm"> <br>
      <button onclick="changePassword()" class="btnChange">Go</button>
    </div>
    
    <div class="container">
      <h2>ban be</h2>
      <select name="" id="" class="listClass" onchange="changeClass()">
        <% classList.map((ele)=>{ %>
          <option value="<%= ele._id %>"><%= ele.className %></option>
        <% }) %>
      </select>
      <div class="listFriend"></div>
      <div class="pageList"></div>
      <select name="" id="pageSize" onchange="changeSize()">
        <option value="2">2</option>
        <option value="6">6</option>
      </select>
    </div>
  </div>

  <%- include('../components/footer') %> 
</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="/public/js/home.js"></script>

</html>